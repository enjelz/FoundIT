<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ada192"
    tools:context=".Students.SNotifsActivity">


    <androidx.cardview.widget.CardView
        android:id="@+id/s_notif_card1"
        android:layout_width="380dp"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="15dp"
        android:layout_marginTop="90dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="10dp"
        android:padding="16dp"
        app:cardBackgroundColor="#C1BCB5"
        app:cardCornerRadius="28dp"
        app:layout_constraintBottom_toTopOf="@+id/s_notif_card3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/s_notif_txt2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:padding="20dp"
            android:text="Your claim request has been successfully su..." />

        <TextView
            android:id="@+id/s_notif_txt1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:text="now"
            android:textStyle="bold" />
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/s_notif_txt_new"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="7dp"
        android:text="New"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/s_notif_card1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.043"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <androidx.cardview.widget.CardView
        android:id="@+id/s_notif_card2"
        android:layout_width="380dp"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="10dp"
        android:padding="16dp"
        app:cardBackgroundColor="#C1BCB5"
        app:cardCornerRadius="28dp"
        app:layout_constraintBottom_toTopOf="@+id/s_notif_txt_earlier"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/s_notif_card3"
        tools:ignore="DuplicateIds,MissingConstraints" />

    <androidx.cardview.widget.CardView
        android:id="@+id/s_notif_card3"
        android:layout_width="380dp"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="10dp"
        android:padding="16dp"
        app:cardBackgroundColor="#C1BCB5"
        app:cardCornerRadius="28dp"
        app:layout_constraintBottom_toTopOf="@+id/s_notif_card2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/s_notif_card1" />

    <androidx.cardview.widget.CardView
        android:id="@+id/s_notif_card4"
        android:layout_width="380dp"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="16dp"
        android:layout_marginTop="6dp"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="10dp"
        android:padding="16dp"
        app:cardBackgroundColor="#C1BCB5"
        app:cardCornerRadius="28dp"
        app:layout_constraintBottom_toTopOf="@+id/s_notif_card5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/s_notif_txt_earlier"
        tools:ignore="DuplicateIds,MissingConstraints" />

    <TextView
        android:id="@+id/s_notif_txt_earlier"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="7dp"
        android:text="Earlier"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/s_notif_card4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.045"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/s_notif_card2"
        app:layout_constraintVertical_bias="0.0" />

    <androidx.cardview.widget.CardView
        android:id="@+id/s_notif_card5"
        android:layout_width="380dp"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="10dp"
        android:padding="16dp"
        app:cardBackgroundColor="#C1BCB5"
        app:cardCornerRadius="28dp"
        app:layout_constraintBottom_toTopOf="@+id/s_notif_card6"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/s_notif_card4"
        tools:ignore="DuplicateIds,MissingConstraints" />

    <androidx.cardview.widget.CardView
        android:id="@+id/s_notif_card6"
        android:layout_width="380dp"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="10dp"
        android:padding="16dp"
        app:cardBackgroundColor="#C1BCB5"
        app:cardCornerRadius="28dp"
        app:layout_constraintBottom_toTopOf="@+id/s_notif_card7"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/s_notif_card5"
        tools:ignore="DuplicateIds,MissingConstraints" />

    <androidx.cardview.widget.CardView
        android:id="@+id/s_notif_card7"
        android:layout_width="380dp"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="307dp"
        android:padding="16dp"
        app:cardBackgroundColor="#C1BCB5"
        app:cardCornerRadius="28dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/s_notif_card6"
        tools:ignore="DuplicateIds,MissingConstraints" />

    <Button
        android:id="@+id/snotif_home_btn"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_marginStart="106dp"
        android:layout_marginTop="228dp"
        android:layout_marginEnd="106dp"
        android:layout_marginBottom="29dp"
        android:backgroundTint="#C1BCB5"
        android:onClick="Home"
        android:text="Home"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/s_notif_card7" />


</androidx.constraintlayout.widget.ConstraintLayout>