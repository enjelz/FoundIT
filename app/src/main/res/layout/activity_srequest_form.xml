<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#D6D0C8"
    tools:context=".Students.SRequestForm">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="380dp"
        android:layout_height="422dp"
        android:layout_alignParentBottom="true"
        android:padding="16dp"
        app:cardBackgroundColor="#C1BCB5"
        app:cardCornerRadius="28dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.516"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.738"
        tools:ignore="DuplicateIds,MissingConstraints">

        <TextView
            android:id="@+id/s_rf_txt_requestforclaiming"
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:layout_gravity="top"
            android:padding="11dp"
            android:text="Request for claiming"
            android:textAlignment="center"
            android:textAllCaps="true"
            android:textSize="16sp"
            android:textStyle="bold"
            tools:ignore="RtlCompat" />

        <EditText
            android:id="@+id/s_rf_edittxt_entername"
            android:layout_width="163dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="50dp"
            android:contentDescription="Name input field"
            android:hint="Enter Name"
            android:inputType="text"
            android:minHeight="48dp"
            android:textAlignment="viewStart"
            android:textSize="12sp"
            tools:ignore="Autofill,HardcodedText" />


        <TextView
            android:id="@+id/s_rf_txt_Name"
            android:layout_width="75dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="47dp"
            android:text="Name"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/s_rf_edittxt_enterschoolid"
            android:layout_width="166dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="100dp"
            android:hint="Enter School ID"
            android:inputType="text"
            android:minHeight="48dp"
            android:textAlignment="viewStart"
            android:textSize="12dp"
            tools:ignore="Autofill,HardcodedText" />

        <TextView
            android:id="@+id/s_rf_txt_schoolid"
            android:layout_width="75dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="94dp"
            android:text="School ID"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/s_rf_edittxt_enterschoolemail"
            android:layout_width="166dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="150dp"
            android:contentDescription="Enter School Email"
            android:hint="Enter School Email"
            android:inputType="textEmailAddress"
            android:minHeight="48dp"
            android:textAlignment="viewStart"
            android:textSize="12dp"
            tools:ignore="Autofill,HardcodedText,TextContrastCheck,TextSizeCheck" />

        <TextView
            android:id="@+id/s_rf_txt_schoolemail"
            android:layout_width="136dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="142dp"
            android:text="School Email"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/s_rf_edittxt_entercontactnumber"
            android:layout_width="166dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="200dp"
            android:hint="Enter Contact #"
            android:inputType="text"
            android:minHeight="48dp"
            android:textAlignment="viewStart"
            android:textSize="12dp"
            tools:ignore="Autofill,SpeakableTextPresentCheck" />

        <TextView
            android:id="@+id/s_rf_txt_contactnumber"
            android:layout_width="136dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="190dp"
            android:text="Contact Number"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/s_rf_edittxt_enterlocation"
            android:layout_width="166dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="290dp"
            android:contentDescription="Location input field"
            android:hint="Location"
            android:inputType="text"
            android:minHeight="48dp"
            android:textAlignment="viewStart"
            android:textSize="12sp"
            tools:ignore="Autofill" />


        <EditText
            android:id="@+id/s_rf_edittxt_enterdate"
            android:layout_width="166dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="320dp"
            android:hint="Date"
            android:inputType="text"
            android:minHeight="48dp"
            android:textAlignment="viewStart"
            android:textSize="12dp"
            tools:ignore="Autofill,SpeakableTextPresentCheck" />

        <TextView
            android:id="@+id/s_rf_txt_dateandlocation"
            android:layout_width="136dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="245dp"
            android:text="Date and Location where the item was lost"
            android:textStyle="bold" />

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <androidx.cardview.widget.CardView
            android:layout_width="178dp"
            android:layout_height="358dp"
            android:layout_marginStart="190dp"
            android:layout_marginTop="45dp"
            app:cardBackgroundColor="#434E4B44">

            <TextView
                android:id="@+id/s_rf_txt_tellusmore"
                android:layout_width="132dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="35dp"
                android:layout_marginTop="15dp"
                android:text="Tell us more how is this yours: "
                android:textStyle="bold" />

            <TextView
                android:id="@+id/s_rf_txt_description2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="35dp"
                android:layout_marginTop="45dp"
                android:text="(Description)"
                android:textSize="10dp"
                tools:ignore="TextSizeCheck" />

            <EditText
                android:id="@+id/s_rf_edittxt_enterdescription"
                android:layout_width="129dp"
                android:layout_height="247dp"
                android:layout_marginLeft="35dp"
                android:layout_marginTop="70dp"
                android:layout_marginRight="100dp"
                android:background="@android:color/transparent"
                android:gravity="top"
                android:hint="Enter description here"
                android:inputType="textMultiLine"
                android:maxLines="50"
                android:textSize="12dp" />

        </androidx.cardview.widget.CardView>


    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/s_rf_txt_itemname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Item Name"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.117"
        app:layout_constraintStart_toEndOf="@+id/imageView5"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.095" />

    <TextView
        android:id="@+id/s_rf_txt_datefound"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Date Found"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.111"
        app:layout_constraintStart_toEndOf="@+id/imageView5"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.147" />

    <TextView
        android:id="@+id/s_rf_txt_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:text="Description"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/imageView5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.127"
        app:layout_constraintStart_toEndOf="@+id/imageView5"


        app:layout_constraintTop_toBottomOf="@+id/s_rf_txt_actualdatefound"
        app:layout_constraintVertical_bias="0.705" />

    <TextView
        android:id="@+id/s_rf_txt_isthisitemyours"
        android:layout_width="309dp"
        android:layout_height="25dp"
        android:layout_marginBottom="28dp"
        android:text="IS THIS ITEM YOURS?"
        android:textAlignment="center"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/cardView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView5"
        app:layout_constraintVertical_bias="0.65" />

    <TextView
        android:id="@+id/s_rf_txt_submitarequesttoclaim"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="40dp"
        android:text="Submit a request to claim!"
        android:textSize="14sp"
        android:textStyle="italic"
        app:layout_constraintBottom_toTopOf="@+id/cardView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.537"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/s_rf_txt_isthisitemyours"
        app:layout_constraintVertical_bias="0.0" />

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="164dp"
        android:layout_height="147dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.165"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.111"
        app:srcCompat="@drawable/profile" />

    <TextView
        android:id="@+id/s_rf_txt_actualitemname"
        android:layout_width="80dp"
        android:layout_height="22dp"
        android:text="Umbrellla"
        app:layout_constraintBottom_toTopOf="@+id/s_rf_txt_datefound"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.118"

        app:layout_constraintStart_toEndOf="@+id/imageView5"
        app:layout_constraintTop_toBottomOf="@+id/s_rf_txt_itemname" />

    <TextView
        android:id="@+id/s_rf_txt_actualdatefound"
        android:layout_width="78dp"
        android:layout_height="20dp"
        android:layout_marginBottom="44dp"

        android:text="10/21/24"
        app:layout_constraintBottom_toBottomOf="@+id/imageView5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.117"
        app:layout_constraintStart_toEndOf="@+id/imageView5"

        app:layout_constraintTop_toBottomOf="@+id/s_rf_txt_datefound"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/s_rf_txt_actualdescription"
        android:layout_width="109dp"
        android:layout_height="22dp"
        android:text="Multi-colored"


        app:layout_constraintBottom_toBottomOf="@+id/imageView5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.154"

        app:layout_constraintStart_toEndOf="@+id/imageView5"
        app:layout_constraintTop_toBottomOf="@+id/s_rf_txt_description"
        app:layout_constraintVertical_bias="0.631" />

    <Button
        android:id="@+id/s_rf_button_submit"
        android:layout_width="121dp"
        android:layout_height="54dp"
        android:backgroundTint="@color/cardview_dark_background"
        android:text="Submit"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.706"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cardView"
        app:layout_constraintVertical_bias="0.506" />

    <Button
        android:id="@+id/s_rf_button_back"
        android:onClick="Home"
        android:layout_width="121dp"
        android:layout_height="54dp"
        android:backgroundTint="@color/cardview_dark_background"
        android:text="Back"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.244"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cardView"
        app:layout_constraintVertical_bias="0.506" />

</androidx.constraintlayout.widget.ConstraintLayout>